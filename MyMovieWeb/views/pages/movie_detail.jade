extends ../layout

block content
    //声明一个容器
    .container
        //容器的每一行
        .row
            //占一行的两个间距的宽度
            .col-md-7
                embed(src="#{movie.flash}",allowFullScreen = "true",quality = "hight",width="720",height="600",align="middle",type="application/x-shockwave-flash")
            .col-md-5
                //这是一个添加的表格
                dl.dl-horizontal
                    dt 电影名字
                    dd movie.title
                    dt 导演
                    dd movie.derector
                    dt 国家
                    dd movie.country
                    dt 语言
                    dd movie.language
                    dt 上映年份
                    dd movie.year
                    dt 简介
                    dd movie.summary
